<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".OmaKulutusarvioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_settings_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sahkontilanneButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/p_rssis_hk_n_tilanne" />

            <Button
                android:id="@+id/kulutusarvioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#5E5E5E"
                android:text="@string/oma_kulutusarvio" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kulutusarvio"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/energyUsageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="100"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kWh"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sähkön hinta tänään"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewPriceToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kustannusarvio"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewAverageCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <Button
            android:id="@+id/sendConsumptionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tallenna kulutus" />

    </LinearLayout>

</ScrollView>